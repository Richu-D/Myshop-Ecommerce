<script>
    $("#checkOutForm").submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/placeorder',
            method:'post',
            data:$('#checkOutForm').serialize(),
            success:(response)=>{
                if(response.codSuccess){
                    location.href='/orders'
                }else{
                    razorpayPayment(response)
                }
            }
        })
    })
//"rzp_test_9osRhNEeYctsvv"
