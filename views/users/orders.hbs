{{>user_header}}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
 {{!-- <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js" type="text/javascript"></script> --}}

<table id="table" class="table table-light table-borderless table-hover text-center mb-0">
    <thead class="thead-dark">
        <tr>
            <th>No.</th>
            <th>Product Image</th>
            <th>Details</th>
            <th>Total</th>
            <th>Ordered Date</th>
            <th>payment method</th>
            <th>Order Status</th>
            <th>Cancel Order</th>
 
        </tr>
    </thead>




    <tbody class="align-middle">

        {{#each data}}

        <tr>
            <td>{{order @index}}</td>
            <td class="align-middle">
                {{#each order}}
                <img src="/product_image/{{this.item}}.jpg" alt="" style="width: 50px;">
                {{/each}}
            </td>


            <td class="align-middle">
                <div class="input-group quantity mx-auto" style="width: 100px;">

                    <span class="mx-1">
                        {{#each order}}
                        {{this.productname}} x
                        {{this.quantity}} =
                        {{this.totalAmount}}
                        <br> 
                        {{/each}}
                        {{#if details.offer}}
                      Coupon Offer {{details.offer}}% OFF
                      {{/if}}

                    </span>


                </div>
            </td>

            <td class="align-middle">{{this.details.grantTotal}}</td>
            <td class="align-middle">

                {{this.details.date}}

            </td>
            <td class="align-middle">

                {{this.details.paymentMethod}}

            </td>

            <td class="align-middle">
                <h6>{{this.details.status}}</h6>
            </td>

            <td class="align-middle">

                {{orderfinished this.details.status this._id}}


            </td>

        </tr>

        {{/each}}
    </tbody>
</table>
<script>

    function cancelOrder(id){
        swal({
            title: "",
            text: `Are you sure to cancel Order ?`,
            icon: "warning",
            buttons: ["No", "Yes"],
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {                
                $.ajax({
                url: `/cancelorder/${id}`,                
                method: 'get',
                success: () => {
                swal("","Order Cancelled", "success").then(()=>{
                    location.reload()
                    })                
                }
                 })
                
            }
        })
    }
 
                    
</script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
