{{>user_header}}
<table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Product Image</th>
                            <th>Details</th>
                            <th>Total</th>
                            <th>Ordered Date</th>
                            <th>payment method</th>
                            <th>Order Status</th>
                            <th>Cancel Order</th>
                            
                        </tr>
                    </thead>




                    <tbody class="align-middle">
                        {{#each data}}
                        <tr>
                            <td class="align-middle">
                                {{#each order}}
                                <img src="/product_image/{{this.item}}.jpg" alt="" style="width: 50px;">
                                {{/each}}
                                </td>

                           
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
               
                                    <span class="mx-1">
                                        {{#each order}}
                                        {{this.productname}} x 
                                        {{this.quantity}} = 
                                        {{this.totalAmount}}
                                        
                                        {{/each}}
                                        </span>
                                    
                                    
                                </div>
                            </td>
                           
                            <td class="align-middle" >{{this.grantTotal.grantTotal}}</td>
                            <td class="align-middle" >
                            {{#each order}}                            
                            {{this.date}}
                            {{/each}}
                            </td>
                            <td class="align-middle" >
                             {{#each order}}
                            {{this.paymentMethod}}
                            {{/each}}
                            </td>

                            <td class="align-middle" >
                                {{#each order}}     
                                <h4>{{this.status}}</h4>
                                {{/each}}
                            </td>

                            <td class="align-middle"><a href="/cancelorder/{{this._id}}" class="btn btn-danger" >Cancel Order</a></td>
                            
                        </tr>
                        
                        {{/each}}
                    </tbody>
                </table>
                {{user_footer}}