<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class=" pr-3">Featured
            Products</span></h2>
    <div class="row px-xl-5">
        {{#each products}}

        <div class="col-lg-3 col-md-4 col-sm-6 pb-1 ">
            <a href="detail/{{this._id}}">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden" style="position:relative;">
                        <img class="img-fluid w-100" src="/product_image/{{this._id}}.jpg" alt=""
                            style="height:300px ;">
                            {{#if this.offerPercentage}}
                            <span style="position:absolute;top:10px;right:10px;z-index:10;"><span class="customBadge">{{this.offerPercentage}}% OFF</span></span>
                            {{/if}}
                    </div> 
                    <div class="text-center py-4">
                        <a class="h6 text-truncate productName" href="detail/{{this._id}}">{{this.name}}</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>&#8377;{{#if this.offerPrice}}{{this.offerPrice}}{{else}}{{this.price}}{{/if}}</h5>
                        {{#if this.offerPrice}}
                        <s class="oldRate">{{this.price}}</s>
                        {{/if}}
                        </div>                        
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <span class="customBadge" style="margin:0px 5px;">4.4 <span class="fa fa-star" style="font-size:small;padding:0px; "></span> </span> <small>  (99)</small>
                            
                            
                        </div>
                    </div>
                </div>
            </a>
        </div>

        {{/each}}

    </div>
</div>
<!-- Products End -->


