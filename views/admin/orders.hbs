
{{>admin_header}}

<style>
.dropbtn {
  background-color: rgba(46, 46, 251, 0.919);
  color: white;
  padding: 16px;
  font-size: 13px;
  border: none;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  left:-85px;
  background-color: #f1f1f1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block;}

.dropdown:hover .dropbtn {background-color: rgba(46, 46, 251, 0.919);}
</style>


<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Order Table</h6>
        <div class="table-responsive">
          <table style="margin-bottom: 150px;" class="table" id="table">
                <thead>
                    <tr>
                        
                        <th scope="col">No.</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Details</th>
                        <th scope="col">Date</th>
                        <th scope="col">Price</th>
                        <th scope="col">payment Method</th>
                        <th scope="col">Status</th>
                        <th scope="col">operation</th>
                    </tr>
                </thead>
                <tbody>
               
                {{#each data}}
                    <tr>
                      <td>{{order @index}}</td>
                       <td>{{#each order}}<img style="width: 50px;height:50px" src="/product_image/{{this.item}}.jpg" alt="product image">{{/each}}</td>
                        <td>{{this.details.name}}</td>
                        <td>{{this.details.userId}}</td>
                        <td>{{#each order}}{{this.productname}} x {{this.quantity}} = {{this.totalAmount}}  <br>{{/each}}<br> Address : {{this.details.address}}<br> Ph: {{this.details.number}}</td>
                        <td>{{this.details.date}}</td>
                        <td>{{this.details.grantTotal}}</td>
                        <td>{{this.details.paymentMethod}}</td>
                        <td>{{this.details.status}}</td>
                       <td> {{adminOrder this.details.status this._id}}</td>                      
                      
                      </tr>{{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
<!-- Table End -->



{{>admin_footer}} 