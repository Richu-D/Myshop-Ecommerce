{{>admin_header}}

                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Users Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            {{!-- <th scope="col">#</th> --}}
                                            <th scope="col">Name</th>                                            
                                            <th scope="col">Email</th>
                                            <th scope="col">number</th>       
                                            <th scope="col">operation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each users}}
                                        <tr>
                                            {{!-- <th scope="row">1</th> --}}
                                            <td>{{this.username}}</td>
                                            <td>{{this.email}}</td>
                                            <td>{{this.number}}</td>
                                            <td><a href="edit/{{this.email}}" class="btn btn-primary">Edit</a>
                                             <a href="delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.username}} user ?')">Delete</a> 
                                            {{#if this.block}}
                                            <a href="unblock/{{this._id}}" class="btn btn-success">Unblock</a></td>
                                            {{else}}
                                             <a href="block/{{this._id}}" class="btn btn-secondary">block</a></td>
                                             {{/if}}
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->

{{>admin_footer}}